questions = ["Question 1:Which protocol is used to find the hardware address of a local device?", "Question 2:What is the main function of the transport layer in the OSI model?"
             ,"Question 3:Which of the following is a valid SQL aggregate function?","Question 4:","Question 5:In an ER diagram, an oval represents:","Question 5:What is the output of the following code?print(type([]) is list)","Question 6:Which of the following is used to define a block of code in Python?","Question 7:Which of the following sorting algorithms can be used to sort a random linked list with minimum time complexity?","Question 8:What is the time complexity of searching an element in a balanced binary search tree (BST)?"]
options = [[" IP"," ARP"," RARP"," ICMP"], [" Routing"," Error detection"," Data encapsulation"," End-to-end communication"],[" COUNT"," JOIN"," SELECT"," INSERT"],[" Entity"," Attribute"," Relationship"," Primary key"],[" True"," False"," Error"," None"],[" Curly braces {}"," Parentheses ()"," Indentation"," Square brackets []"],[" Insertion Sort"," Quick Sort"," Heap Sort"," Merge Sort"],[" O(n)"," O(log n)"," O(n log n)"," O(1)"]]
answers = [1,3,0,1,0,2,3,1]
amount = 0
for i in range(len(questions)):
    print(f"\nQuestion {i+1}: {questions[i]}")
    for j in range(len(options[i])):
        print(f"Option {j+1} : {options[i][j]}")
    ans = int(input("Enter the option between 1 to 4 number: "))-1
    if(answers[i] == ans):
           amount += 50      
    else:
         print("Final amount:", amount)
         print(f"Correct Answer: {options[i][answers[i]]}\n")
         break
